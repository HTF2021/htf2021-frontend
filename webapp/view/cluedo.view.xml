<mvc:View
	controllerName="com.flexso.htf2021.controller.cluedo"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	displayBlock="true"
	xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page
					id="page"
					title="{i18n>title}"
				>
					<content>
						<HBox id="grondplannHBox">
							<VBox>
							<!-- Buttons voor kamers -->
							<HBox>
							<Button
								id="balzaalButton"
								text="Balzaal"
								type="Reject"
								class="sapUiTinyMargin"
								press="onBalzaalPress"
								visible= "false"
							/>
							<Button
								id="bibliotheekButton"
								text="Bibliotheek"
								type="Reject"
								class="sapUiTinyMargin"
								press="onBibliotheekPress"
								visible= "false"
							/>
							<Button
								id="biljartkamerButton"
								text="Biljartkamer"
								type="Reject"
								class="sapUiTinyMargin"
								press="onBiljartkamerPress"
								visible= "false"
							/>
							<Button
								id="eetkamerButton"
								text="Eetkamer"
								type="Reject"
								class="sapUiTinyMargin"
								press="onEetkamerPress"
								visible= "false"
							/>
							<Button
								id="halButton"
								text="Hal"
								type="Reject"
								class="sapUiTinyMargin"
								press="onHalPress"
								visible= "false"
							/>
							<Button
								id="keukenButton"
								text="Keuken"
								type="Reject"
								class="sapUiTinyMargin"
								press="onKeukenPress"
								visible= "false"
							/>
							<Button
								id="serreButton"
								text="Serre"
								type="Reject"
								class="sapUiTinyMargin"
								press="onSerrePress"
								visible= "false"
							/>
							<Button
								id="studeerkamerButton"
								text="Studeerkamer"
								type="Reject"
								class="sapUiTinyMargin"
								press="onStudeerkamerPress"
								visible= "false"
							/>
							<Button
								id="zitkamerButton"
								text="Zitkamer"
								type="Reject"
								class="sapUiTinyMargin"
								press="onZitkamerPress"
								visible= "false"
							/>
							</HBox>
							<!-- Grondplan -->
							<Image
								id="grondplanImg"
								width="100%"
								visible= "false"
							/>
							</VBox>
							<!-- Startbutton -->
							<VBox id="controlVBox" alignItems="Start">
							<!-- Start/Restart button -->
							<!-- <Toolbar>
							<ToolbarSpacer/>
								<Title
								id="startTitle"
								text="Welkom bij Flexso cluedo, duik in een kamer en ontmasker de moordenaar."
								level="H1"
							/>
							<ToolbarSpacer/>
							</Toolbar> -->
							
							<Image
								id= "startImage"
								width = "75%"
							/>
								<Button
									id="start"
									activeIcon=""
									icon="sap-icon://begin"
									text="Start"
									type="Accept"
									width="210px"
									press="onStartPress"
									class="sapUiTinyMargin"
								/>
								<!-- Comboboxes -->
								<HBox id="wapenHBox">
									<ComboBox
										id="wapen"
										visible= "false"
										width= "210px"
										maxWidth="650px"
										class="sapUiTinyMargin"
										items="{
											path: 'cluedoData>/wapens',
											sorter: { path: 'id' }
										}">
											<core:ListItem key="{cluedoData>id}" text="{cluedoData>name}"/>
									</ComboBox>
									<core:Icon 
										id="wapenIcon"
										class="size1">
									</core:Icon>
								</HBox>
								<HBox id="daderHBox">
									<ComboBox
										id="dader"
										visible= "false"
										width= "210px"
										maxWidth="650px"
										class="sapUiTinyMargin"
										items="{
											path: 'cluedoData>/daders'
										}">
										<items>
											<core:Item key="{cluedoData>id}" text="{cluedoData>name}" />
										</items>
										
									</ComboBox>
									<core:Icon 
										id="daderIcon"
										class="size1">
									</core:Icon>
								</HBox>
								<HBox id="kamerHBox">
									<ComboBox
										id="kamer"
										editable= "false"
										visible= "false"
										width= "210px"
										maxWidth="650px"
										class="sapUiTinyMargin"
										items = "{path: 'cluedoData>/kamers'}"
										>
										<items>
											<core:Item key="{cluedoData>id}" text="{cluedoData>name}" />
										</items>
										
									</ComboBox>
									<core:Icon 
										id="kamerIcon"
										class="size1">
									</core:Icon>
								</HBox>
								<!-- Validate button -->
								<Button
									id="valideer"
									visible= "false"
									activeIcon=""
									icon="sap-icon://validate"
									text="Valideer waarden"
									width="210px"
									press="onValidatePress"
									class="sapUiTinyMargin"
								/>
							</VBox>
						</HBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>